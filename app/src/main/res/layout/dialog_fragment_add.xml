<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <EditText
        android:id="@+id/et_dialogFragment_nameTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_coloronprimary_radius_16"
        android:ems="10"
        android:hint="@string/hint_add_task"
        android:inputType="textPersonName"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_addTask_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_dialogFragment_nameTask"
        app:layout_constraintTop_toBottomOf="@+id/et_dialogFragment_nameTask" />

    <Button
        android:id="@+id/btn_dialogAddFragment_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/cancel"
        app:layout_constraintStart_toEndOf="@+id/btn_addTask_ok"
        app:layout_constraintTop_toTopOf="@+id/btn_addTask_ok" />
</androidx.constraintlayout.widget.ConstraintLayout>